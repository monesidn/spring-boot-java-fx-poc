<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox prefHeight="200.0" prefWidth="137.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="What's your name?" />
            <TextField fx:id="nameField" />
            <Button fx:id="sayHelloBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Say Hello" />
         </children>
      </VBox>
   </center>
</BorderPane>
